<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app_ics"
    android:id="@+id/popup_holder"
    >
    <WebView
        android:id="@+id/popup_webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/popup_zoomcont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="120dp"
        android:orientation="vertical"
        >
        <TextView android:text="Coarse Zoom Adjustment" android:layout_width="match_parent" android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/popup_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView android:paddingTop="30dp" android:text="Fine Zoom Adjustment" android:layout_width="match_parent" android:layout_height="wrap_content" />
        <SeekBar
            android:id="@+id/popup_seekbarfine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>